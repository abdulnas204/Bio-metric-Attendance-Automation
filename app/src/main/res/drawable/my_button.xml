<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="5px" android:color="#1082a0" />
            <gradient android:angle="-90" android:startColor="#ffffff" android:endColor="#daffa0"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="5px" android:color="#1082a0" />
            <solid android:color="#80fcbc"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="5px" android:color="#1082a0" />
            <gradient android:angle="-90" android:startColor="#ffffff" android:endColor="#80fcbc" />
        </shape>
    </item>
</selector>